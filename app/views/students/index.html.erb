<p style="color: green"><%= notice %></p>

<h1>Students</h1>

<div id="students">
  <table>
    <tr>
      <th>Name</th>
      <th>Major</th>
      <th>GPA</th>
      <th>Show</th>
    </tr>

    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %>  </td>
        <td><%= student.major %> </td>
        <td><%= student.gpa %>   </td>
        <td><%= link_to "Show this student", student %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= link_to "New student", new_student_path %>
